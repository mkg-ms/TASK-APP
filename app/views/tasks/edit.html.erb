<% provide(:title, "Edit Task") %>

<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user, @task), local: true, method: :patch) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { product: @task} %>
      
      <%= f.label "名称", class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label "詳細", class: "label-signup" %>
      <%= f.text_area :content, rows: "5", class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-md btn-primary btn-update" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-md btn-default btn-update" %>
    <% end %>
  </div>
</div>