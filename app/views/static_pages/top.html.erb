<% provide(:title, "Top") %>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="center jumbotron" id="top-main">
        <h1>TaskApp</h1>
        <p>TaskAppは簡易ToDo管理ツールです。</p>
        <p>↓↓初めてのご利用↓↓</p>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>
          <% else %>
            <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success disabled" %>
          <% end %>
          <div style="margin-top: 10px;">
            <%= link_to "ゲストログイン（管理権限）", signup_path, class: "btn btn-md btn-danger", style: "display:none;" %>
            <%= link_to "ゲストログイン（一般権限）", signup_path, class: "btn btn-md btn-warning", style: "display:none;" %>
          </div>
        <% else %>
          <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>
          <div style="margin-top: 10px;">
            <%= link_to "ゲストログイン（管理権限）", signup_path, class: "btn btn-md btn-danger" %>
            <%= link_to "ゲストログイン（一般権限）", signup_path, class: "btn btn-md btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <h1>ログイン</h1>
      <div class="row">
        <% if logged_in? %>
          <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      
            <%= f.label :メールアドレス, class: "label-login" %>
            <%= f.email_field :email,  readonly: true, class: 'form-control' %>
      
            <%= f.label :パスワード, class: "label-login" %>
            <%= f.password_field :password,  readonly: true, class: 'form-control' %>

            <%= f.submit "ログイン状態です。",  disabled: true, class: "btn btn-primary btn-block btn-login" %>
          <% end %>
        <% else %>
          <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      
            <%= f.label :メールアドレス, class: "label-login" %>
            <%= f.email_field :email, class: 'form-control' %>
      
            <%= f.label :パスワード, class: "label-login" %>
            <%= f.password_field :password, class: 'form-control' %>
            
            <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
              <%= f.check_box :remember_me, id: "remember-me" %>
              <span>ログイン情報を記憶する</span>
            <% end %>
      
            <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
